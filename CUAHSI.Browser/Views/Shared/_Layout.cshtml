<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="CUAHSI Prototype Faceted Data Discovery Interface">
        <meta name="author" content="Alex Bedig, Tufts University">

        <!-- Le styles -->
        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->        
        @Styles.Render("~/Content/bootstrap")
        @Styles.Render("~/Content/css")    
        @Styles.Render("~/Content/themes/base/css")
        @Styles.Render("~/Content/bootstrap-responsive")                    
        @Styles.Render("~/Content/uijqgrid")                  
        @Scripts.Render("~/bundles/compatibility")
        <!-- Le fav and touch icons (add them here)-->        
    </head>

    <body>    
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="#">Prototype HIS Faceted Search</a>
                    <div class="nav-collapse collapse">
                        <ul id="nav" class="nav">                        
                            <li class="time">
                                Between <input class="time" type="text" id="startdate">
                            </li>
                            <li class="time">
                                and <input class="time" type="text" id="enddate"></>
                            </li>                                                
                            <li id="apireference"><a href="https://data.cuahsi.org/Help" target="_blank">API</a></li>
                            <li id ="hisreference"><a href="http://his.cuahsi.org/" target="_blank">HIS</a></li>                        
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>
    @RenderBody()                   
    @Scripts.Render("~/bundles/discovery")    
    @RenderSection("scripts", required: false)               
  </body>
</html>
